{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": "./src/",
        "includePattern": ".js$",
        "excludePattern": ".min.js$"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "./node_modules/minami/",
        "encoding": "utf8",
        "destination": "./docs/_html/",
        "tutorials": "./docs/tutorials/",
        "readme": "./docs/README.md",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true
    }
}
